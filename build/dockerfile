FROM {{ BASEIMAGE }}
MAINTAINER tianyu@spacesystech.com
LABEL Name=rest-cigsystem-user Version=1.0.0 
RUN mkdir -p /root/www
WORKDIR /root/www
ADD ./src .
ADD ./package.json .
ADD ./pm2 ./pm2
RUN npm config set registry https://registry.npm.taobao.org
RUN npm config set @cig:registry https://r.ispacesys.cn
RUN npm i --production
EXPOSE 80
ENTRYPOINT pm2 startOrReload ./pm2/prod.json --env production --no-daemon
